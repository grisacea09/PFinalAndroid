<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Inversiones" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/buton</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/text_login</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- mensaje de error debajo del EditText-->
    <style name="AppTheme.EditTextError" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="errorTextColor">@color/error</item>
    </style>



    <style name="BottomAppBarStyle" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:background">@drawable/gradient_bottom_nav</item>
        <item name="itemIconTint">@color/bnv_tab_item_foreground</item>
        <item name="itemTextColor">@color/bnv_tab_item_foreground</item>
    </style>


</resources>