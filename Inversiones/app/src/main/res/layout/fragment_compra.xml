        <LinearLayout
            android:id="@+id/layindian"
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/sindian_ruppe"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="GBP">
            </TextView>

            <ImageView
                android:id="@+id/imgindian_ruppe"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/indian_ruppe" />
            <TextView
                android:id="@+id/tindian_rupee"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="Texto modeda">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/snk_won"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="GBP">
            </TextView>

            <ImageView
                android:id="@+id/imgnk_won"
                android:layout_width="130dp"
