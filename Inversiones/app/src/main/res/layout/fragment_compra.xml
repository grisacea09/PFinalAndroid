                    android:gravity="center"
                    android:text="GBP">
                </TextView>

                <ImageView
                android:id="@+id/imgBpound"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:padding="10dp"

                android:src="@drawable/british_pound" />

                <TextView
                    android:id="@+id/bpound"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                    android:gravity="center"
                android:text="Texto modeda">
            </TextView>

        </LinearLayout>

        <LinearLayout
