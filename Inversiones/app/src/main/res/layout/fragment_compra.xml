            <TextView
                android:id="@+id/tsk_won"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="Texto modeda">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/speso_colombia"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="GBP">
            </TextView>


            <ImageView
                android:id="@+id/imgpeso_colombia"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/peso_colombia" />
            <TextView
                android:id="@+id/tpeso_colomb"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:text="Texto modeda">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/speso_cuba"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="GBP">
            </TextView>

            <ImageView
                android:id="@+id/imgpeso_cuba"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/peso_cuba" />
            <TextView
                android:id="@+id/tpeso_cuba"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:text="Texto modeda">
            </TextView>
