        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/skrona"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="GBP">
            </TextView>
            <ImageView
                android:id="@+id/imgkrona"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/tkrona"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="Texto modeda">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/srusian"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="GBP">
            </TextView>

            <ImageView
                android:id="@+id/imgrusian"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/rusian" />
            <TextView
                android:id="@+id/trusian"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="Texto modeda">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="190dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/syuan"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="GBP">
            </TextView>
            <ImageView
                android:id="@+id/imgyuan"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:padding="10dp"
                android:src="@drawable/yuan" />
            <TextView
                android:id="@+id/tyuan"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:textColor="#3F51B5"
                android:gravity="center"
                android:text="Texto modeda">
            </TextView>
