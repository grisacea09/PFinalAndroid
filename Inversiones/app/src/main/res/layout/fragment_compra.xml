        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:id="@+id/detalleDivisas"
        android:fillViewport="true"
        android:layout_below="@id/divisas"

        >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <RelativeLayout
        android:id="@+id/compraContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/monto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"

            android:gravity="center"
            android:text="Monto: $5000 MNX"
            android:textColor="#3F51B5"></TextView>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/monto">

        </com.github.mikephil.charting.charts.LineChart>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/line_chart"
            android:orientation="horizontal"
            android:id="@+id/tx"
            android:visibility= "gone"
            >

            <TextView
                android:id="@+id/txAyer"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Ayer"
                android:textColor="#3F51B5">

            </TextView>

            <TextView
                android:id="@+id/txHoy"
                android:layout_width="130dp"
                android:layout_height="40dp"

                android:gravity="center"
                android:text="Hoy"
                android:textColor="#3F51B5">

            </TextView>

            <TextView
                android:id="@+id/txNext"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Mañana"
                android:textColor="#3F51B5">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ratesKpi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/kpi"
            android:visibility= "gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rtkAyer"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Mañana"
                android:textColor="#3F51B5"

                >

            </TextView>

            <TextView
                android:id="@+id/rtkHoy"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Mañana"
                android:textColor="#3F51B5"
                 >

            </TextView>

            <TextView
                android:id="@+id/rtkNext"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="Mañana"
                android:textColor="#3F51B5"
                >

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/kpi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tx"
            android:visibility= "gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rtAyer"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                >

            </ImageView>

            <ImageView
                android:id="@+id/rtHoy"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                 >

            </ImageView>

            <ImageView
                android:id="@+id/rtNext"
                android:layout_marginRight="45dp"
                android:layout_marginLeft="45dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"

                >

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/asignaMonto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/ratesKpi"
            android:visibility = "gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/montousr"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="Monto:"
                android:textColor="#3F51B5"
                >
            </TextView>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cantidad"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                >

            </com.google.android.material.textfield.TextInputEditText>

            <android.widget.Button
                android:id="@+id/buttonCompra"
                style="@style/botonAcept"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_centerInParent="true"
                android:text="@string/comprar"
                android:textAllCaps="false"
                />

        </LinearLayout>
    </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/babMain"
        style="@style/BottomAppBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:contentInsetStart="0dp"
        app:fabCradleMargin="10dp"
        app:fabCradleRoundedCornerRadius="10dp"
        app:fabCradleVerticalOffset="10dp"
        app:hideOnScroll="true"
        tools:ignore="BottomAppBar">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            style="@style/BottomNavigationStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:menu="@menu/bottom_nav_menu" />

    </com.google.android.material.bottomappbar.BottomAppBar>



</FrameLayout>